<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="?attr/topColorText"
            app:title="@string/account_details">
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="422dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="131dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="@string/account_name"
                android:textColor="?attr/insideText"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/account_name_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=" "
                android:textColor="?attr/insideText"
                android:textSize="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="@string/category"
                android:textColor="?attr/insideText"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/account_category_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=" "
                android:textColor="?attr/insideText"
                android:textSize="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="@string/email"
                android:textColor="?attr/insideText"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/account_email_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=" "
                android:textColor="?attr/insideText"
                android:textSize="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="@string/username"
                android:textColor="?attr/insideText"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/account_username_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=" "
                android:textColor="?attr/insideText"
                android:textSize="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="@string/password"
                android:textColor="?attr/insideText"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/account_password_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=" "
                android:textColor="?attr/insideText"
                android:textSize="25dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:text="@string/password_strength"
                android:textColor="?attr/insideText"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/account_password_strength_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=" "
                android:textColor="?attr/insideText"
                android:textSize="25dp">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_delete"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="40dp"
        android:text="@string/delete"
        android:textColor="?attr/topColorText"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_modify"
        android:layout_width="135dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="257dp"
        android:layout_marginBottom="40dp"
        android:text="@string/modify"
        android:textColor="?attr/topColorText"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>